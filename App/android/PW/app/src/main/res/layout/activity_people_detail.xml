<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_people_large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_people_desc"
        android:layout_below="@+id/iv_people_large"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:maxLines="15"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.2" />

    <ImageView
        android:id="@+id/iv_faction"
        android:layout_width="106dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/iv_people_large"
        android:layout_marginStart="-76dp"
        android:layout_marginLeft="-76dp"
        android:layout_marginTop="203dp"
        android:layout_toEndOf="@+id/iv_people_large"
        android:layout_toRightOf="@+id/iv_people_large" />
</RelativeLayout>